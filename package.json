{
  "name": "github-battle",
  "description": "GitHub Battle",
  "version": "0.1.0",
  "author": "Joonas Tiala <joonas.tiala@gmail.com>",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtiala/github-battle"
  },
  "scripts": {
    "start": "react-scripts start",
    "prestart": "npm run build:styles",
    "build": "react-scripts build",
    "build:styles": "postcss src/styles/index.css -o src/styles/tailwind.css",
    "prebuild": "NODE_ENV=production npm run build:styles",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write '**/*.{ts,tsx,json,css,scss,html,md,yml,yaml}'",
    "lint:ts": "eslint src/**/*.{ts,tsx}",
    "lint:ts:fix": "eslint src/**/*.{ts,tsx} --fix",
    "lint:other": "prettier --list-different '**/*.{json,md,yml,yaml}'",
    "lint": "npm run lint:ts && npm run lint:other",
    "lint:fix": "npm run lint:ts:fix && npm run format"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^9.0.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@xstate/react": "^0.8.1",
    "autoprefixer": "^9.7.4",
    "classnames": "^2.2.6",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.7.5",
    "xstate": "^4.7.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
